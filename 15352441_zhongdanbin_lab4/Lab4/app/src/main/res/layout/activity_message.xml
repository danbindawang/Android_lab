<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cn.edu.sysu.lab4.Message">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:background="@color/cardview_shadow_start_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:srcCompat="@drawable/arla"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/good_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="110dp"
        android:textColor="#000000"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/collect"
        android:layout_width="22dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/empty_star"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        app:layout_constraintTop_toBottomOf="@+id/back"
        android:layout_marginTop="110dp"
        app:layout_constraintHorizontal_bias="0.494" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#D5000000"
        android:textSize="20sp"

        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#8A000000"
        android:textSize="20sp"

        app:layout_constraintTop_toBottomOf="@+id/price"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />


    <ImageView
        android:id="@+id/shopcar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@mipmap/shoplist"
        app:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="25dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <View
        android:id="@+id/divider1"
        android:layout_width="368dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/weight"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#1E000000"
        />

    <View
        android:id="@+id/divider2"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:background="#1E000000"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toTopOf="@+id/divider1"
        app:layout_constraintRight_toLeftOf="@+id/shopcar"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <TextView
        android:id="@+id/more_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider1"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        android:text="更多产品信息"
        android:textSize="22sp"
        android:textColor="#000000"
        android:layout_marginStart="10dp" />

    <View
        android:id="@+id/divider3"
        android:layout_width="368dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@+id/more_message"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="8dp"
        android:background="#1E000000"
        />


    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一键下单"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/divider3"
        android:layout_marginTop="15dp"
        />

    <View
        android:id="@+id/divider4"
        android:layout_width="368dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/order"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#1E000000"
        />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享商品"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/divider4"
        android:layout_marginTop="15dp"
        />

    <View
        android:id="@+id/divider5"
        android:layout_width="368dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/share"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#1E000000"
        />

    <TextView
        android:id="@+id/nointerest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不感兴趣"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/divider5"
        android:layout_marginTop="15dp"
        />

    <View
        android:id="@+id/divider6"
        android:layout_width="368dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/nointerest"
        android:layout_marginTop="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#1E000000"
        />

    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看更多商品促销信息"
        android:textColor="#000000"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/divider6"
        android:layout_marginTop="15dp"
        />

    <View
        android:id="@+id/divider7"
        android:layout_width="368dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/more"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#1E000000"
        />


</android.support.constraint.ConstraintLayout>
